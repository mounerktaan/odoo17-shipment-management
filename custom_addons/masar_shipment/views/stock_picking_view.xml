<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_picking_form_masar_shipment" model="ir.ui.view">
        <field name="name">stock.picking.form.masar.shipment</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">

            <!-- إضافة Tracking Code في الهيدر -->
            <xpath expr="//field[@name='name']" position="inside">
                <field name="x_tracking_code" readonly="1"/>
            </xpath>
            <xpath expr="//field[@name='state']" position="inside">
                <field name="x_shipment_state"
                       widget="statusbar"
                       statusbar_visible="created,picked,in_transit,out_for_delivery,delivered,cancelled"/>
            </xpath>

        

        </field>
    </record>
</odoo>